<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DANGEROUS (execução): precisa estar declarado no manifest E pedido em runtime -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Opcional: declare a feature da câmera como não obrigatória para instalar em devices sem câmera -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <!-- SPECIAL (app-ops, alto impacto): NÃO declare SYSTEM_ALERT_WINDOW aqui.
         O fluxo correto é checar Settings.canDrawOverlays() e enviar o usuário
         para a tela de Acesso especial. Declarar no manifest não concede acesso. -->

    <application
        android:label="aula"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema inicial enquanto o Flutter carrega -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Usado pelo Flutter; não remover -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Visibilidade de pacotes (queries) necessária para ProcessTextPlugin do Flutter -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
